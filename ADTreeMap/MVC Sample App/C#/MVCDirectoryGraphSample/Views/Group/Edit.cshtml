@model Microsoft.WindowsAzure.ActiveDirectory.Group

@{
    ViewBag.Title = "Edit Group";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm()) {
    <label style="color: #FF0000" >*</label><label>indicates a mandetory field</label><br />
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Group</legend>

        @Html.HiddenFor(model => model.objectId)
        @Html.HiddenFor(model => model.objectType)        
        @Html.HiddenFor(model => model.mailNickname)
        @Html.HiddenFor(model => model.mailEnabled)
        @Html.HiddenFor(model => model.securityEnabled)

        <div class="editor-label">
            @Html.LabelFor(model => model.displayName) <label style="color: #FF0000" >*</label>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.displayName)
            @Html.ValidationMessageFor(model => model.displayName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.description)
            @Html.ValidationMessageFor(model => model.description)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

